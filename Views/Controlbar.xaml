<UserControl x:Class="FFmpegApi.Views.Controlbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FFmpegApi.Views"
             mc:Ignorable="d" 
             d:DesignWidth="720"
             d:DesignHeight="110"
             MinWidth="720" 
             MinHeight="110"  
             HorizontalContentAlignment="Stretch" 
             VerticalContentAlignment="Stretch">
    <UserControl.Resources>
        <!-- Define colors -->
        <SolidColorBrush x:Key="DarkOrangeBrush" Color="#D35400"/>
        <SolidColorBrush x:Key="DarkBackgroundBrush" Color="#1F1F1F"/>
        <SolidColorBrush x:Key="HoverBrush" Color="#FFA500"/>
        <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#2F2F2F"/>

        <!-- Button style -->
        <Style x:Key="ControlButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ButtonBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource DarkOrangeBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkOrangeBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource DarkOrangeBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Slider style -->
        <Style x:Key="VolumeSliderStyle" TargetType="Slider">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Border Background="{StaticResource DarkBackgroundBrush}"
                                    BorderBrush="{StaticResource DarkOrangeBrush}"
                                    BorderThickness="1"
                                    CornerRadius="5"/>
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate>
                                                <Ellipse Width="12" Height="12" Fill="{StaticResource DarkOrangeBrush}"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton>
                                        <RepeatButton.Template>
                                            <ControlTemplate>
                                                <Rectangle Fill="{StaticResource DarkOrangeBrush}"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.IncreaseRepeatButton>
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton>
                                        <RepeatButton.Template>
                                            <ControlTemplate>
                                                <Rectangle Fill="{StaticResource DarkBackgroundBrush}"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Equalizer slider style -->
        <Style x:Key="EqualizerSliderStyle" TargetType="Slider">
            <Setter Property="Minimum" Value="-12"/>
            <Setter Property="Maximum" Value="12"/>
            <Setter Property="Value" Value="0"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Orientation" Value="Vertical"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Border Background="{StaticResource DarkBackgroundBrush}"
                                    BorderBrush="{StaticResource DarkOrangeBrush}"
                                    BorderThickness="1"
                                    CornerRadius="3"/>
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate>
                                                <Ellipse Width="12" Height="12" Fill="{StaticResource DarkOrangeBrush}"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton>
                                        <RepeatButton.Template>
                                            <ControlTemplate>
                                                <Rectangle Fill="{StaticResource DarkOrangeBrush}"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.IncreaseRepeatButton>
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton>
                                        <RepeatButton.Template>
                                            <ControlTemplate>
                                                <Rectangle Fill="{StaticResource DarkBackgroundBrush}"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Popup text style -->
        <Style x:Key="PopupTextStyle" TargetType="TextBlock">
            <Setter Property="Background" Value="{StaticResource DarkBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource DarkOrangeBrush}"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" ShadowDepth="2" BlurRadius="5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Media title style -->
        <Style x:Key="MediaTitleStyle" TargetType="TextBlock" BasedOn="{StaticResource PopupTextStyle}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="MaxWidth" Value="500"/>
        </Style>

        <!-- Timer style -->
        <Style x:Key="TimerStyle" TargetType="TextBlock" BasedOn="{StaticResource PopupTextStyle}">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <!-- Playlist item style -->
        <Style x:Key="PlaylistItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="{StaticResource ButtonBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource DarkOrangeBrush}"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{StaticResource DarkOrangeBrush}"
                                BorderThickness="1"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource DarkOrangeBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox style for repeat modes -->
        <Style x:Key="RepeatComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource DarkBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource DarkOrangeBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkOrangeBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="5">
                                <Grid>
                                    <ToggleButton x:Name="ToggleButton"
                                                  Background="{TemplateBinding Background}"
                                                  BorderBrush="{TemplateBinding BorderBrush}"
                                                  BorderThickness="{TemplateBinding BorderThickness}"
                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"/>
                                    <ContentPresenter x:Name="ContentPresenter"
                                                     Content="{TemplateBinding SelectionBoxItem}"
                                                     HorizontalAlignment="Left"
                                                     VerticalAlignment="Center"
                                                     Margin="5,0,0,0"/>
                                    <Popup x:Name="PART_Popup"
                                           IsOpen="{Binding IsChecked, ElementName=ToggleButton}"
                                           Placement="Bottom"
                                           AllowsTransparency="True">
                                        <Border Background="{StaticResource DarkBackgroundBrush}"
                                                BorderBrush="{StaticResource DarkOrangeBrush}"
                                                BorderThickness="1"
                                                CornerRadius="5">
                                            <ScrollViewer>
                                                <ItemsPresenter/>
                                            </ScrollViewer>
                                        </Border>
                                    </Popup>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Storyboard -->
        <Storyboard x:Key="fadeOutControl" FillBehavior="HoldEnd">
            <DoubleAnimation Storyboard.TargetName="_grid" Storyboard.TargetProperty="Opacity" To="0.0" Duration="0:0:2" />
        </Storyboard>
        <Storyboard x:Key="fadeInControl" FillBehavior="HoldEnd">
            <DoubleAnimation Storyboard.TargetName="_grid" Storyboard.TargetProperty="Opacity" To="1.0" Duration="0:0:4" />
        </Storyboard>
    </UserControl.Resources>
    <UserControl.FocusVisualStyle>
        <Style/>
    </UserControl.FocusVisualStyle>

    <Grid x:Name="_grid"  Background="{StaticResource DarkBackgroundBrush}" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <!-- Media Title -->
        <TextBlock x:Name="TextblockMediaTitle" 
                   Grid.Row="0"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Center"
                   Text="{Binding MediaTitle, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                   Style="{StaticResource MediaTitleStyle}"
                   ToolTip="{Binding MediaTitle, RelativeSource={RelativeSource AncestorType=UserControl}}" Margin="5,5,5,4"/>
        <!-- Media Timer and Duration -->
        <StackPanel Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0">
            <TextBlock x:Name="TextblockPosition" 
                       Text="{Binding Position, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                       Style="{StaticResource TimerStyle}"/>
            <TextBlock Text="/" Style="{StaticResource TimerStyle}"/>
            <TextBlock x:Name="TextblockDuration" 
                       Text="{Binding Duration, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                       Style="{StaticResource TimerStyle}"/>
        </StackPanel>
        <!-- Control Buttons -->
        <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="50" Margin="5,0,0,0">
            <!-- Open Media Button -->
            <Button x:Name="BtnOpenMedia" Content="📂" Style="{StaticResource ControlButtonStyle}" ToolTip="Open Media"/>
            <!-- Stream Button -->
            <Button x:Name="BtnOpenStream" Content="🌐" Style="{StaticResource ControlButtonStyle}" ToolTip="Open Stream"/>
            <!-- Open Subtitles Button -->
            <Button x:Name="BtnOpenSubtitle" Content="📜" Style="{StaticResource ControlButtonStyle}" ToolTip="Open Subtitles"/>
            <!-- Open Playlist Button -->
            <Button x:Name="BtnOpenPlaylist" Content="📃" Style="{StaticResource ControlButtonStyle}" ToolTip="Open Playlist"/>
            <!-- Rewind Button -->
            <Button x:Name="BtnPreview" Content="⏮" Style="{StaticResource ControlButtonStyle}" ToolTip="Rewind"/>
            <!-- Play/Pause Button -->
            <Button x:Name="BtnPlayPause" Content="▶" Style="{StaticResource ControlButtonStyle}" ToolTip="Play/Pause"/>
            <!-- Stop Button -->
            <Button x:Name="BtnStop" Content="⏹" Style="{StaticResource ControlButtonStyle}" ToolTip="Stop"/>
            <!-- Fast Forward Button -->
            <Button x:Name="BtnNext" Content="⏭" Style="{StaticResource ControlButtonStyle}" ToolTip="Fast Forward"/>
            <!-- Fullscreen On/Off -->
            <Button x:Name="BtnFullscreen" Content="⛶" Style="{StaticResource ControlButtonStyle}" ToolTip="Fullscreen On/Off"/>
            <!-- Mute Button -->
            <Button x:Name="BtnMute" Content="🔊" Style="{StaticResource ControlButtonStyle}" ToolTip="Mute"/>
            <!-- Volume Slider -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5,0">
                <!-- Custom Volume Bar using ProgressBarView -->
                <local:ProgressbarView x:Name="ProgressbarVolume"
                           Width="105"
                           Height="20"
                           Minimum="0"
                           Maximum="100"
                           ProgressText="{Binding VolumeProgressText, StringFormat={}{0:000}, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                           Value="{Binding Volume, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                           Background="{StaticResource DarkBackgroundBrush}"
                           Foreground="{StaticResource DarkOrangeBrush}"
                           MouseLeftButtonDown="VolumeProgressBar_MouseLeftButtonDown"
                           MouseMove="VolumeProgressBar_MouseMove"
                           MouseLeftButtonUp="VolumeProgressBar_MouseLeftButtonUp"
                           MouseLeave="VolumeProgressBar_MouseLeave" />

                <!-- Volume Popup -->
                <Popup x:Name="PopupVolume"
           Placement="Top"
           PlacementTarget="{Binding ElementName=ProgressbarVolume}"
           StaysOpen="True"
           AllowsTransparency="True"
           IsOpen="False">
                    <Border Background="#CC000000"
                CornerRadius="6"
                Padding="10,6">
                        <TextBlock x:Name="PopupTextVolume"
                       Foreground="White"
                       FontSize="14"
                       FontWeight="Bold"
                       Text="50%" />
                    </Border>
                </Popup>
            </StackPanel>
            <!--<Slider x:Name="SliderVolume" 
                    Style="{StaticResource VolumeSliderStyle}" 
                    Value="{Binding Volume, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                    ToolTip="Volume"/>-->
            <!-- Repeat Button -->
            <Button x:Name="BtnRepeat" Content="🔁" Style="{StaticResource ControlButtonStyle}" ToolTip="Repeat Mode" Click="BtnRepeat_Click"/>
            <!-- Equalizer Button -->
            <Button x:Name="BtnEqualizer" Content="🎛" Style="{StaticResource ControlButtonStyle}" ToolTip="Equalizer" Click="BtnEqualizer_Click"/>
        </StackPanel>

        <!-- Volume Popup -->
        <!--<Popup x:Name="PopupVolume" 
               PlacementTarget="{Binding ElementName=SliderVolume}" 
               Placement="Top" 
               AllowsTransparency="True"
               IsOpen="{Binding VolumePopupVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}">
            <TextBlock x:Name="PopupTextblock" 
                       Text="{Binding VolumePopupText, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                       Style="{StaticResource PopupTextStyle}"/>
        </Popup>-->

        <!-- Playlist Popup -->
        <Popup x:Name="PopupPlaylist" 
               PlacementTarget="{Binding ElementName=BtnOpenPlaylist}" 
               Placement="Top" 
               AllowsTransparency="True"
               IsOpen="{Binding PlaylistPopupVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}">
            <Border Background="{StaticResource DarkBackgroundBrush}" 
                    BorderBrush="{StaticResource DarkOrangeBrush}" 
                    BorderThickness="1"
                    CornerRadius="5">
                <ListBox x:Name="ListboxPlaylist" 
                         ItemsSource="{Binding PlaylistItems, RelativeSource={RelativeSource AncestorType=UserControl}}"
                         SelectedIndex="{Binding SelectedPlaylistIndex, RelativeSource={RelativeSource AncestorType=UserControl}}"
                         Width="200" Height="150"
                         Background="{StaticResource DarkBackgroundBrush}">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem" BasedOn="{StaticResource PlaylistItemStyle}"/>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Border>
        </Popup>

        <!-- Equalizer Popup -->
        <Popup x:Name="PopupEqualizer" 
               PlacementTarget="{Binding ElementName=BtnEqualizer}" 
               Placement="Top" 
               AllowsTransparency="True"
               IsOpen="{Binding EqualizerPopupVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}">
            <Border Background="{StaticResource DarkBackgroundBrush}" 
                    BorderBrush="{StaticResource DarkOrangeBrush}" 
                    BorderThickness="1"
                    CornerRadius="5"
                    Padding="10">
                <StackPanel Orientation="Horizontal">
                    <StackPanel>
                        <TextBlock Text="Bass" Foreground="{StaticResource DarkOrangeBrush}" HorizontalAlignment="Center"/>
                        <Slider x:Name="SliderBass" 
                                Style="{StaticResource EqualizerSliderStyle}" 
                                Value="{Binding BassLevel, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Mid" Foreground="{StaticResource DarkOrangeBrush}" HorizontalAlignment="Center"/>
                        <Slider x:Name="SliderMid" 
                                Style="{StaticResource EqualizerSliderStyle}" 
                                Value="{Binding MidLevel, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Treble" Foreground="{StaticResource DarkOrangeBrush}" HorizontalAlignment="Center"/>
                        <Slider x:Name="SliderTreble" 
                                Style="{StaticResource EqualizerSliderStyle}" 
                                Value="{Binding TrebleLevel, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Popup>

        <!-- Repeat Mode Popup -->
        <Popup x:Name="PopupRepeat" 
               PlacementTarget="{Binding ElementName=BtnRepeat}" 
               Placement="Top" 
               AllowsTransparency="True"
               IsOpen="{Binding RepeatPopupVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}">
            <Border Background="{StaticResource DarkBackgroundBrush}" 
                    BorderBrush="{StaticResource DarkOrangeBrush}" 
                    BorderThickness="1"
                    CornerRadius="5"
                    Padding="5">
                <ComboBox x:Name="ComboboxRepeat"
                          Style="{StaticResource RepeatComboBoxStyle}"
                          SelectedItem="{Binding RepeatMode, RelativeSource={RelativeSource AncestorType=UserControl}}"
                          ItemsSource="{Binding RepeatModes, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            </Border>
        </Popup>
    </Grid>
</UserControl>